<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.user.phonedatabase"
android:versionCode="1"
android:versionName="1.0" >

<uses-sdk android:minSdkVersion="15" />

<application
    android:icon="@drawable/icon"
    android:label="@string/app_name" >
    <activity
        android:name=".PhonesOverviewActivity"
        android:label="@string/app_name" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>


    <activity
        android:name=".PhonesDetailActivity"
        android:windowSoftInputMode="stateVisible|adjustResize" >
    </activity>


    <provider
        android:name=".contentprovider.PhonesContentProvider"
        android:authorities="com.example.user.phonedatabase.contentprovider" >
    </provider>
</application>

</manifest>